<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kodingkidz.alzhelp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InsideScrapBook"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_inside_scrap_book"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name=".AddPictureActivity"
            android:label="@string/title_activity_add_picture"
            android:parentActivityName=".SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kodingkidz.alzhelp.SettingsActivity" />
        </activity>
        <activity
            android:name=".RightPageAct"
            android:label="Right Page"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AddDescriptionActivity"
            android:label="@string/title_activity_add_description"
            android:parentActivityName=".SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kodingkidz.alzhelp.SettingsActivity" />
        </activity>
        <activity
            android:name=".AddAlbumActivity"
            android:label="@string/title_activity_add_album"
            android:parentActivityName=".SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kodingkidz.alzhelp.SettingsActivity" />
        </activity>
    </application>

</manifest>
