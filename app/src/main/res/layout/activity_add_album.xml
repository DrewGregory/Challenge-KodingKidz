<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kodingkidz.alzhelp.AddAlbumActivity">


    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Album Name"
        android:id="@+id/albumNameText"
        android:layout_weight="1" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="3"
    android:weightSum="3"
    tools:context="com.kodingkidz.alzhelp.AddAlbumActivity">
        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:text="red"
            android:id="@+id/redButton"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:onClick="redButton"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/scrapbook_cover_red"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:text="blue"
            android:id="@+id/blueButton"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:onClick="blueButton"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/scrapbook_cover_blue"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:text="green"
            android:id="@+id/greenButton"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:onClick="greenButton"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/scrapbook_cover_green"
            />

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3"
    tools:context="com.kodingkidz.alzhelp.AddAlbumActivity"
    android:layout_weight="2.40">
    <Button
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="Purple"
        android:id="@+id/purpleButton"
        android:layout_weight="1"
        android:layout_margin="15dp"
        android:onClick="purpleButton"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/scrapbook_cover_purple"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="pink"
        android:id="@+id/pinkButton"
        android:layout_weight="1"
        android:layout_margin="15dp"
        android:onClick="pinkButton"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/scrapbook_cover_pink"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:text="yellow"
        android:id="@+id/yellowButton"
        android:layout_weight="1"
        android:layout_margin="15dp"
        android:onClick="yellowButton"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/scrapbook_cover_yellow"
        />

</LinearLayout>
</LinearLayout>
