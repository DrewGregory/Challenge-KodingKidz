<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kodingkidz.alzhelp.AddAlbumActivity">

    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Album Name"
        android:id="@+id/albumNameText"
        android:layout_weight="1" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="3">

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:text="red"
            android:id="@+id/redButton"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:onClick="createAlbum"

            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/scrapbook_cover_red"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:text="blue"
            android:id="@+id/blueButton"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:onClick="createAlbum"

            android:background="@drawable/scrapbook_cover_blue"

            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:text="green"
            android:id="@+id/greenButton"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:onClick="createAlbum"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/scrapbook_cover_green"
            android:layout_gravity="center_vertical" />
           </LinearLayout>

    <LinearLayout
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="3"
android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:text="pink"
            android:id="@+id/pinkButton"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:onClick="createAlbum"

            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/scrapbook_cover_pink"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:text="purple"
            android:id="@+id/purpleButton"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:onClick="createAlbum"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/scrapbook_cover_purple"

            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:text="yellow"
            android:id="@+id/yellowButton"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:onClick="createAlbum"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/scrapbook_cover_yellow"
            android:layout_gravity="center_vertical" />
</LinearLayout>
    </LinearLayout>


