<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kodingkidz.alzhelp.SettingsActivity">

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wood_background"
        android:smoothScrollbar="false"
        tools:context=".MainActivity" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Add Album"
        android:onClick="addAlbum"
        android:id="@+id/add_Album"
        android:layout_weight="1"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="add picture"
        android:onClick="addPicture"
        android:id="@+id/add_picture"
        android:layout_weight="1"
      />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Add desciption"
        android:onClick="addDescription"
        android:id="@+id/add_desc"
        android:layout_weight="1"

      />
</LinearLayout>
